# Browser Extension Environment Variables Template
# Copy this file to ../extension/.env and update the values

# API Configuration
VITE_API_BASE_URL=http://localhost:3001/api/v1
VITE_API_HOST=localhost:3001

# Environment
VITE_ENVIRONMENT=development
VITE_DEBUG_MODE=true

# Extension Configuration
VITE_EXTENSION_NAME=WishApp Extension
VITE_EXTENSION_VERSION=0.1.0

# Feature Flags
VITE_ENABLE_DEBUG_LOGGING=true
VITE_ENABLE_SENTRY=false

# Sentry Configuration (optional)
VITE_SENTRY_DSN=your_extension_sentry_dsn_here

# Parser Configuration
VITE_PARSER_TIMEOUT=5000
VITE_MAX_IMAGE_SIZE=5242880
