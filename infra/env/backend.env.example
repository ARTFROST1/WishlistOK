# Backend Environment Variables Template
# Copy this file to ../backend/.env and update the values

# Database Configuration
POSTGRES_HOST=localhost
POSTGRES_PORT=5432
POSTGRES_USER=wishapp
POSTGRES_PASSWORD=wishapp_dev
POSTGRES_DB=wishapp_development

# Redis Configuration
REDIS_URL=redis://localhost:6379/0

# Rails Configuration
RAILS_ENV=development
RAILS_LOG_LEVEL=debug
RAILS_MAX_THREADS=5
RAILS_MIN_THREADS=5
SECRET_KEY_BASE=development_secret_key_base_replace_in_production

# JWT Configuration
JWT_SECRET_KEY=your_jwt_secret_key_here_replace_in_production

# Sidekiq Configuration
SIDEKIQ_CONCURRENCY=5

# CORS Configuration
ALLOWED_ORIGINS=http://localhost:3000,http://127.0.0.1:3000

# Storage Configuration (Supabase)
SUPABASE_URL=https://your-project.supabase.co
SUPABASE_ANON_KEY=your_supabase_anon_key_here
SUPABASE_SERVICE_KEY=your_supabase_service_key_here

# CDN Configuration (Cloudflare)
CLOUDFLARE_ZONE_ID=your_cloudflare_zone_id_here
CLOUDFLARE_API_TOKEN=your_cloudflare_api_token_here

# Email Configuration (optional)
SMTP_HOST=smtp.example.com
SMTP_PORT=587
SMTP_USERNAME=your_smtp_username
SMTP_PASSWORD=your_smtp_password

# Sentry Configuration (optional)
SENTRY_DSN=your_sentry_dsn_here

# Application Configuration
APP_HOST=localhost:3000
API_HOST=localhost:3001
